{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "lib": ["es6", "dom"],
        "module": "es6",
        "target": "es5",
        "jsx": "react",
        "moduleResolution": "node",
        // For typescript to understand export default
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": false
    },
    "exclude": [
        "node_modules"
    ]
}